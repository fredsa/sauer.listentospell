<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <CheckBox
        android:id="@+id/spell_correct_words_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/spell_correct_words" />

    <TextView
        android:id="@+id/spell_correct_words_checkbox_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/spell_correct_words_checkbox_description"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <CheckBox
        android:id="@+id/color_code_words_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/color_code_words" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/color_code_words_checkbox_description"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</LinearLayout>