<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="sauer.listentospell" android:versionCode="1"
  android:versionName="1.0">
  <uses-sdk android:minSdkVersion="10" />

  <application android:icon="@drawable/icon" android:label="@string/app_name"
    android:debuggable="true" android:name=".app.ListenToSpellApplication">

    <activity android:name=".MainActivity" android:theme="@android:style/Theme.NoTitleBar"
      android:label="@string/app_name" android:windowSoftInputMode="stateVisible|adjustResize"  android:configChanges="keyboard|keyboardHidden|orientation">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity android:name=".GetReadyToTrainActivity">
    </activity>

    <activity android:name=".TrainActivity" android:configChanges="keyboard|keyboardHidden|orientation">
    </activity>

    <activity android:name=".WordListActivity">
    </activity>

    <activity android:name=".MyStatsActivity">
    </activity>

  </application>
</manifest>