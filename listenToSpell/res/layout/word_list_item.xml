<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <LinearLayout android:id="@+id/linearLayout1" android:layout_height="wrap_content" android:layout_width="match_parent">
        <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/word_list_item_take_test" android:text="@string/word_list_item_take_test"></Button>
        <TextView android:text="TextView" android:layout_weight="1" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/word_list_item_word"></TextView>
        <Button android:text="@string/word_list_item_edit_text" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/word_list_item_edit_button"></Button>
    </LinearLayout>
    
</LinearLayout>
